{
  "extends": ["cantonjs"],
  "globals": {
    "__DEV__": true,
    "__WECHAT__": true,
    "__ALIPAY__": true,
    "App": true,
    "Page": true,
    "Component": true,
    "wx": true,
    "my": true,
    "getApp": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.babel.js"
      }
    }
  },
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",

        "named": "always",

        "asyncArrow": "always"
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["src/"]
      }
    ],
    "max-len": ["error", { "code": 300 }]
  }
}
